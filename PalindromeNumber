#include<iostream>
using namespace std;
bool checkPalindrome(int n){
  int num = n;
  int rev = 0;
  int remainder = 0;
  while(num!=0){
    remainder = num%10;
    rev = rev*10 + remainder;
    num = num/10;
  }
  if(n==rev){
    return true;
  } else {
    return false;
  }
}
int main(){
  int n = 121;
  bool isNumberPalindrome = checkPalindrome(n);
  cout<<isNumberPalindrome;
}
